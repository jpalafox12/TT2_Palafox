<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MrCanTT2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#DA0379</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ButtonIcon">
        <item name="android:background">@null</item>
        <item name="borderlessButtonStyle">@null</item>
    </style>

</resources>